{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080/dist/",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                // Allow CORS locally
                "--disable-web-security",
                // Required with --disable-web-security
                "--user-data-dir=/tmp/chrome-dev/"
            ],
        },
        {
            "name": "Debug Server",
            "program": "${workspaceFolder}/server/src/out/server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Debug Server Tests",
            "request": "launch",
            "runtimeArgs": [
                "jest"
            ],
            "runtimeExecutable": "npx",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "cwd": "${workspaceFolder}/server/",
            "sourceMaps": true
        }
    ]
}